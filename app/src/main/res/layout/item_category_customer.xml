<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/rounded_card"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <!-- Category Image -->
    <ImageView
        android:id="@+id/categoryImage"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/category_placeholder"
        android:scaleType="centerCrop"
        android:background="@color/lightGray"
        android:contentDescription="Category image" />

    <!-- Category Info -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessories"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary" />

        <TextView
            android:id="@+id/productsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45 products"
            android:textSize="12sp"
            android:textColor="@color/textSecondary"
            android:layout_marginTop="2dp" />

        <!-- Featured Badge -->
        <TextView
            android:id="@+id/featuredBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Featured"
            android:textSize="10sp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:background="@drawable/featured_badge_background"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>