<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Order Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvOrderID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ORD-001234"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary" />

        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Processing"
            android:textSize="12sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/status_processing_background"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Order Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Date"
                android:textSize="12sp"
                android:textColor="@color/textSecondary" />

            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 15, 2024 14:30"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:textSize="12sp"
                android:textColor="@color/textSecondary" />

            <TextView
                android:id="@+id/tvOrderAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R124.99"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Items Information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_item"
            app:tint="@color/textSecondary" />

        <TextView
            android:id="@+id/tvItemsCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3 items"
            android:textSize="14sp"
            android:textColor="@color/textPrimary"
            android:layout_marginStart="8dp" />

        <!-- Delivery Estimate -->
        <TextView
            android:id="@+id/tvDeliveryEstimate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Est. Jan 18"
            android:textSize="12sp"
            android:textColor="@color/accentColor"
            android:drawableStart="@drawable/ic_delivery"
            android:drawablePadding="4dp" />
    </LinearLayout>

    <!-- Customer Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btnViewDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="View Details"
            android:textColor="@color/primaryColor"
            android:background="@drawable/button_outline"
            android:layout_marginEnd="6dp"
            style="?attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btnTrackOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Track Order"
            android:textColor="@color/textOnPrimary"
            android:background="@drawable/button_accent"
            android:layout_marginStart="6dp"
            style="?attr/borderlessButtonStyle" />
    </LinearLayout>

    <!-- Additional Customer Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnReorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reorder"
            android:textColor="@color/primaryColor"
            android:background="@android:color/transparent"
            style="?attr/borderlessButtonStyle" />

        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:background="@color/borderColor"
            android:layout_marginHorizontal="12dp" />

        <Button
            android:id="@+id/btnContactSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Support"
            android:textColor="@color/textSecondary"
            android:background="@android:color/transparent"
            style="?attr/borderlessButtonStyle" />
    </LinearLayout>

</LinearLayout>