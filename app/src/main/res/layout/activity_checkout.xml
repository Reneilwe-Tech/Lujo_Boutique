<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offWhite">

    

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_above="@+id/bottomBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHECKOUT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"/>

            <!-- Delivery and Collection options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center">

                <!-- Delivery -->
                <LinearLayout
                    android:id="@+id/deliveryOption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/option_unselected"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_delivery" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery"
                        android:textStyle="bold"
                        android:paddingTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R150 Standard Delivery.\nFaster options may be available"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/darkGray"/>
                </LinearLayout>

                <!-- Collection -->
                <LinearLayout
                    android:id="@+id/collectionOption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/option_selected"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_collection" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collection"
                        android:textStyle="bold"
                        android:paddingTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R60 Pep pick-up points.\nOpen 7 days a week"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/darkGray"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Address search -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Delivery Address"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/search_bar_bg"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search Address"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/black"
                    android:padding="0dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_google_logo" />
            </LinearLayout>

            <!-- Order summary -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Summary"
                android:textStyle="bold"
                android:paddingTop="24dp"
                android:paddingBottom="8dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- RecyclerView replaced with horizontal item layout -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_order_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Totals -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cart total"
                    android:textSize="14sp"
                    android:gravity="end"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R 4550"
                    android:textSize="14sp"
                    android:gravity="end"
                    android:textColor="@color/darkGray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery Fee"
                    android:textSize="14sp"
                    android:gravity="end"
                    android:paddingTop="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R 150"
                    android:textSize="14sp"
                    android:gravity="end"
                    android:textColor="@color/darkGray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order total"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:paddingTop="4dp"/>

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R 4470"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Payment Method -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:textStyle="bold"
                android:paddingTop="24dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_right"
                android:scaleType="centerInside"
                android:contentDescription="Select Payment Method"/>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/charcoal"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical|space_between">

        <TextView
            android:id="@+id/totalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R4 470.00\nYour order (4 items)"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheckout"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Place Order"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/brown"
            app:cornerRadius="24dp"
            android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>