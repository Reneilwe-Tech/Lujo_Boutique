<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/customer_item_background"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Customer Avatar -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/customerAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user"
        app:tint="@color/black"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/lightGray" />

    <!-- Customer Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="customer@email.com"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/customerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0810010111"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Status and Actions -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/customerStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textSize="10sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/status_active_background"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/ordersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 orders"
            android:textSize="10sp"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>