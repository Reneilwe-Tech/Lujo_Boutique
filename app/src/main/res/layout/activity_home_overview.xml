<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeOverviewActivity"
    android:background="@color/offWhite"
    android:orientation="vertical">

    <!-- Top Horizontal Category Bar -->
    <HorizontalScrollView
        android:id="@+id/categoryScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnWomen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Women"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnKids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kids"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnBeauty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beauty"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:textStyle="bold" />
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


    <!-- Search Bar + Icons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Search products"
            android:padding="8dp"
            android:background="@drawable/search_background"
            android:drawableStart="@drawable/ic_search" />


        <ImageView
            android:id="@+id/iconHeart"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_heart"
            android:padding="4dp"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/iconBell"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_bell"
            android:padding="4dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

            <!-- Banner -->
            <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_placeholder" />

            <!-- Product Sections -->
            <LinearLayout
                android:id="@+id/sectionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include layout="@layout/bottom_navigation" />

</LinearLayout>

